<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_preview" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintDimensionRatio="16:9"/>
    <TextView
            android:text="Video Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_video" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_preview"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageView_photo" android:layout_marginStart="8dp"
            android:textStyle="bold" android:textSize="15sp"/>
    <TextView
            android:text="Channel Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_channel"
            app:layout_constraintTop_toBottomOf="@+id/textView_video"
            app:layout_constraintEnd_toEndOf="@+id/textView_video"
            android:paddingBottom="16dp" app:layout_constraintStart_toEndOf="@+id/imageView_photo"
            android:layout_marginStart="8dp" android:layout_marginEnd="16dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_photo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_preview" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:background="#000"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_channel"/>
</android.support.constraint.ConstraintLayout>
